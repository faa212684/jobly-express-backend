{
  "$id": "http://our.company.com/jobNew.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "title": {
      "maxLength": 50,
      "minLength": 1,
      "type": "string"
    },
    "salary": {
      "minimum": 0,
      "type": "integer"
    },
    "equity": {
      "type": "string",
      "pattern": "0|(0?\\.[0-9]+)"
    }
  },
  "additionalProperties": false,
  "required": ["title"]
}
